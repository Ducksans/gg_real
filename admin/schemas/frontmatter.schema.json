{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gg-real-admin/schemas/frontmatter.schema.json",
  "title": "문서 프런트매터 표준 스키마",
  "type": "object",
  "required": ["file", "title", "owner", "created", "updated", "status", "schemaVersion"],
  "properties": {
    "file": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} UTC / \\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} KST$"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} UTC / \\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2} KST$"
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "schemaVersion": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 1
        },
        {
          "type": "string",
          "pattern": "^\\d+(?:\\.\\d+)?$"
        }
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "code_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "doc_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "links": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
