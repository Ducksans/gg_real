{
  "name": "gg-figma-plugin",
  "version": "0.1.0",
  "description": "Codex-assisted Figma automation plugin",
  "private": true,
  "scripts": {
    "build": "npm run build:manifest && npm run build:main && npm run build:ui",
    "build:manifest": "node scripts/build-archetype-manifest.js",
    "build:main": "esbuild src/main.ts --bundle --platform=node --target=es2018 --outfile=dist/main.js",
    "build:ui": "node scripts/copy-ui.js",
    "watch": "npm run build:main -- --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest watch --config vitest.config.ts"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.84.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
